<section id="booking" class="pb10">
    <div class="container">
        {% include "../../atoms/breadcrumb/breadcrumb.twig" with {index: 5} %}
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default Panel__border--black">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">Make a booking</h3>
                    </div>
                    <form name="booking" class="panel-body" method="post" netlify>
                        <fieldset>
                            <div class="mb1 clear">
                                <div class="col-25">
                                    <label class="icon-user" for="textinputname">Name:</label>
                                </div>
                                <div class="col-75">
                                    <input class="text-black pl1" id="textinputname" name="textinputname" type="text" placeholder="Your Name">
                                </div>
                            </div>
                            <div class="mb1 clear">
                                <div class="col-25">
                                    <label class="icon-mail-alt" for="textinputemail">Email:</label>
                                </div>
                                <div class="col-75">
                                    <input class="pl1" id="textinputemail" name="textinputemail" type="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="mb1 clear">
                                <div class="col-25">
                                    <label class="icon-phone" for="textinputphone">Phone:</label>
                                </div>
                                <div class="col-75">
                                    <input class="pl1" id="textinputphone" name="textinputphone" type="text" placeholder="Phone">
                                </div>
                            </div>
                            <div class="mb1 clear">
                                <div class="col-25">
                                    <label class="icon-calendar" for="date-select">Available dates:</label>
                                </div>
                                <div class="col-75">
                                    <select id="date-select">
                                        <option value="">Available dates</option>
                                        {% for event in events %}
                                            <option value="{{event.date}}">{{event.day}} {{event.date}} {{event.month}} {{event.time}}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="mb1 clear">
                                <div class="col-25">
                                    <label class="icon-users" for="numberinputguests">Number of guests:</label>
                                </div>
                                <div class="col-75">
                                    <input class="pl1" id="numberinputguests" name="numberinputguests" type="number" min="1"
                                        placeholder="Guests"  aria-label="numberofguests">
                                </div>
                            </div>
                            <div class="mb1 clear">
                                <div class="col-25">
                                    <label class="icon-location" for="textinputvenue">Venue:</label>
                                </div>
                                <div class="col-75">
                                    <input class="pl1" id="textinputvenue" name="venue" type="text" placeholder="Venue">
                                </div>
                            </div>
                            <div class="clear text-center ma0 mb2 mt2" data-netlify-recaptcha="true"></div>
                            <div class="clear pl2 pr2 mb2 mt2">
                                <div class="col-sm-12 text-center">
                                    <input type="submit" id="submit-button" />
                                    <label class="btn btn-success" for="submit-button">Submit</label>
                                    <span id="submit-button-error-message">
                                        This form will not submit
                                    </span>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

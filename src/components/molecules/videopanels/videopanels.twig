<div class="container">
    {% include "../../atoms/breadcrumb/breadcrumb.twig" with {index: 3} %}
    <div class="row">
        <div class="col-xs-12 text-center">
            <div class="panel panel-default Panel__border--black">
                <div class="panel-heading flex-center">
                    <h3 class="panel-title text-blue">
